{
    "id": "app.drey.PaperPlane",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "paper-plane",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm16/bin:/app/bin"
    },
    "cleanup": [
        "/etc",
        "/include",
        "/lib/cmake",
        "/lib/girepository*",
        "/lib/pkgconfig",
        "/lib/python*",
        "/libexec",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/installed-tests",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "rlottie",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release",
                "-Dexample=false",
                "-Dwerror=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/paper-plane-developers/rlottie",
                    "commit": "1dd47cec7eb8e1f657f02dce9c497ae60f7cf8c5"
                }
            ]
        },
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release"
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler/-/archive/v0.8.1/blueprint-compiler-v0.8.1.tar.gz",
                    "sha256": "9207697cfac6e87a3c0ccf463be1a95c3bd06aa017c966a7e352ad5bc486cf3c"
                }
            ]
        },
        {
            "name": "libsass",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/libsass.git",
                    "commit": "302397c0c8ae2d7ab02f45ea461c2c3d768f248e"
                }
            ]
        },
        {
            "name": "sassc",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/sassc.git",
                    "commit": "82803377c33247265d779af034eceb5949e78354"
                }
            ]
        },
        {
            "name": "gtk",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release",
                "-Dintrospection=disabled",
                "-Dprint-cups=disabled",
                "-Ddemos=false",
                "-Dbuild-testsuite=false",
                "-Dbuild-examples=false",
                "-Dbuild-tests=false"
            ],
            "cleanup": [
                "/bin/gtk*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/gtk.git",
                    "commit": "11ef4c8f43dca478d6acfaa31a3fea659946db26",
                    "tag": "4.12.3"
                },
                {
                    "type": "patch",
                    "path": "gtk-reversed-list.patch"
                }
            ]
        },
        {
            "name": "libshumate",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgir=false",
                "-Dvapi=false",
                "-Dgtk_doc=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libshumate/",
                    "commit": "eeb257ab8cfca9133ec2e7da739d3ce815be7067",
                    "tag": "1.1.2"
                }
            ]
        },
        {
            "name": "tdlib",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/tdlib/td.git",
                    "commit": "2589c3fd46925f5d57e4ec79233cd1bd0f5d0c09"
                }
            ]
        },
        {
            "name": "paper-plane",
            "buildsystem": "meson",
            "config-opts": [
                "-Dtg_api_id=22303002",
                "-Dtg_api_hash=3cc0969992690f032197e6609b296599"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/paper-plane-developers/paper-plane/releases/download/v0.1.0-beta.5/paper-plane-v0.1.0-beta.5.tar.xz",
                    "sha256": "1516a63a4b3ade61221cfb81205b974b5109529f897bf692a8fc0c2ee779202e",
                    "strip-components": 0
                }
            ]
        }
    ]
}
